{
  "name": "clovers-api",
  "version": "0.0.1",
  "description": "Clovers API",
  "main": "dist",
  "scripts": {
    "dev": "nodemon -w src --exec \"babel-node src --presets es2015,stage-0\"",
    "build": "babel src -s -D -d dist --presets es2015,stage-0",
    "start": "node dist",
    "prestart": "npm run -s build",
    "test": "eslint src",
    "update": "npm i clovers-network/clovers-contracts --force"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clovers-network/clovers-api.git"
  },
  "author": "Billy Rennekamp <billy.rennekamp@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.13.3",
    "clovers-contracts": "github:clovers-network/clovers-contracts",
    "compression": "^1.5.2",
    "cors": "^2.7.1",
    "ethers": "^3.0.9",
    "ethers-contracts": "^2.2.1",
    "express": "^4.13.3",
    "morgan": "^1.8.0",
    "resource-router-middleware": "^0.6.0",
    "rethinkdb": "^2.3.3",
    "socket.io": "^2.1.0",
    "web3": "^0.20.1",
    "web3-provider-engine": "^13.8.0",
    "xss": "^0.3.7"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": "^3.1.1",
    "nodemon": "^1.9.2"
  },
  "bugs": {
    "url": "https://github.com/clovers-network/clovers-api/issues"
  },
  "homepage": "https://github.com/clovers-network/clovers-api#readme",
  "keywords": [
    "clovers.network",
    "ethereum",
    "web3",
    "js"
  ]
}
